<h1>PickAxe</h1>
<% if session %>
  <p><%= session[:id] %></p>
  <% end %>
  <div class="login">
    <%= form_tag('/sessions', method: "post") do %>
        <div>
          <%= label_tag "Username:" %>
          <%= text_field_tag :username, nil, class: "field" %>
        </div>
        <div>
          <%= label_tag "Password:" %>
          <%= password_field_tag :password, nil, class: "field" %>
        </div>
        <div>
          <%= submit_tag "Sign In", class: "button signin_button" %>
        </div>
    <% end %>
  </div>
    <%= link_to "Sign Up", new_users_path %>
    <%= link_to "Sign Out", 'sessions/session[:id]', method: :delete %>